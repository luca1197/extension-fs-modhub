{
	"manifest_version": 3,
	"name": "Farming Simulator ModHub Utilities",
	"description": "Useful additions to the Farming Simulator ModHub website",
	"version": "1.0.0",
	"default_locale": "en",
	"icons": {
		"16": "assets/icon16.png",
		"32": "assets/icon32.png",
		"48": "assets/icon48.png",
		"64": "assets/icon64.png",
		"96": "assets/icon96.png",
		"128": "assets/icon128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.farming-simulator.com/mods.php*"],
			"css": ["assets/style.css"],
			"js": ["index.js"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/icon-download.svg", "assets/loader.svg"],
			"matches": ["<all_urls>"]
		}
	]
}